<p id="task-count" role="status" aria-live="polite">
  Showing {{ page.items|length }}
  task{% if page.items|length != 1 %}s{% endif %}
  {% if query %} matching "{{ query }}"{% endif %}
</p>

<ul id="task-list">
  {% for task in page.items %}
    {% include "tasks/_item.peb" with {"task": task} %}
  {% endfor %}
</ul>
